<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
        >
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8"/>
    <title>${title}</title>
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>
<div class="container">

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <t:pagelink page="index" class="brand">Training application - ${appVersion}</t:pagelink>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li t:type="loop" source="sections" value="section" class="prop:classForSection">
                            <t:pagelink page="prop:section">${section}</t:pagelink>
                        </li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>

    <!-- start page -->
    <div class="row">
        <div class="span8">
            <!-- start content -->
            <div class="content">
                <div class="post">
                    <div class="title">
                        <h2>${title}</h2>
                    </div>
                    <div class="entry">
                        <t:body/>
                    </div>
                </div>
            </div>
            <!-- start sidebar -->
        </div>
        <div class="span4">
            <div class="alert">
                <h4>You are running Tapestry <strong>v.${tapestryVersion}</strong></h4>


                <t:jquery.jgrowl/>
                <t:pagelink page="prop:currentPage">Refresh page</t:pagelink>
            </div>
        </div>
        <!-- end sidebar -->

    </div>
</div>
|

<!-- end page -->
</body>
</html>